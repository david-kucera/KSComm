<Window x:Class="ClientApp.InputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientApp"
        mc:Ignorable="d"
        Title="Input client ID" Height="150" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>

        <GroupBox Header="Input ID" Grid.Row="0">
            <StackPanel FlowDirection="LeftToRight" Orientation="Horizontal">
                <Label Content="Zadaj client ID: "></Label>
                <TextBox Name="TextBoxId"  Text="0" MinWidth="100" VerticalContentAlignment="Center"></TextBox>
            </StackPanel>
        </GroupBox>
       
        <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
            <Button Content="OK" Margin="5" Padding="5" MinWidth="60" Click="Ok"></Button>
            <Button Content="Cancel" Margin="5" Padding="5" MinWidth="60" Click="Cancel"></Button>
        </StackPanel>
    </Grid>
</Window>
